{% macro Pricing(identity, defaults) %}
  {% set pricingList = defaults.pricing %}
  {% set accentColor = identity.ACCENT_COLOR or defaults.ACCENT %}
  
  {% if pricingList and pricingList.length > 0 %}
    <section id="tarifs" class="section section--pricing">
      <div class="container">
        <header class="section__header">
          <h2 class="section__title">Nos tarifs</h2>
          <p class="section__subtitle">Prix transparents, sans surprise</p>
        </header>

        <div class="pricing-grid" data-count="{{ pricingList.length }}">
          {% for item in pricingList %}
            <article class="pricing-card">
              <h3 class="pricing-label">{{ item.label }}</h3>
              <div class="pricing-price" style="color: {{ accentColor }};">{{ item.price }}</div>
              {% if item.note %}
                <p class="pricing-note">{{ item.note }}</p>
              {% endif %}
            </article>
          {% endfor %}
        </div>

        <div class="pricing-cta">
          <p>üí° <strong>Devis gratuit par t√©l√©phone</strong> - Le prix exact vous est communiqu√© avant notre d√©part</p>
          <a href="tel:{{ identity.PHONE_TEL or identity.CTA_PRIMARY_TEL }}" class="pricing-cta-button" style="background: {{ accentColor }};">
            Appeler pour un devis
          </a>
        </div>
      </div>
    </section>
  {% endif %}
{% endmacro %}
