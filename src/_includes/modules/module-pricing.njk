<section class="section pricing">
  <div class="container">
    <h2>Tarifs</h2>
    {% if site.ENABLE_SECTION_DESCRIPTIONS %}
    <p class="section-description">{{ site.SECTION_DESCRIPTIONS.pricing }}</p>
    {% endif %}
    <div class="pricing-grid">
      {% for price in site.PRICING %}
      <div class="pricing-card">
        <h3>{{ price.label }}</h3>
        <div class="price">{{ price.price }}{{ site.CURRENCY or "â‚¬" }}</div>
        {% if price.note %}
        <p class="price-note">{{ price.note }}</p>
        {% endif %}
      </div>
      {% endfor %}
    </div>
  </div>
</section>
