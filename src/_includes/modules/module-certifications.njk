<section class="section certifications">
  <div class="container">
    <h2>Certifications & Agr√©ments</h2>
    {% if site.ENABLE_SECTION_DESCRIPTIONS %}
    <p class="section-description">{{ site.SECTION_DESCRIPTIONS.certifications }}</p>
    {% endif %}
    <div class="certifications-grid">
      {% for cert in site.CERTIFICATIONS %}
      <div class="certification-card">
        <div class="cert-icon">{{ cert.icon }}</div>
        <h3>{{ cert.name }}</h3>
        <p>{{ cert.desc }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
